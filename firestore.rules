
/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user-specific data
 *              and role-based access control for administrative functions. It prioritizes
 *              authorization independence by denormalizing authorization data onto secured documents.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles; access is restricted to the user themselves.
 * - /users/{userId}/trip_plans/{tripPlanId}: Stores trip plans; access is restricted to the user.
 * - /users/{userId}/reviews/{reviewId}: Stores reviews for a user; read is public, write is restricted.
 * - /cities/{cityId}: Stores city data; read access is public, write access is restricted to admins.
 * - /cities/{cityId}/forecasts/{forecastId}: Stores forecast data; read access is public, write is restricted to admins.
 * - /cities/{cityId}/competitor_data/{competitorDataId}: Stores competitor data; read access is public, write is restricted to admins.
 * - /seasonal_data/{seasonalDataId}: Stores seasonal data; read access is public, write is restricted to admins.
 * - /service_listings/{listingId}: Stores service listings; read is public, write is restricted to service provider.
 * - /invitations/{invitationId}: Stores invitations; access is restricted to admins.
 *
 * Key Security Decisions:
 * - Users can only access their own user documents and trip plans.
 * - Listing all users is disallowed for non-admins.
 * - City, Forecast, CompetitorData, and SeasonalData documents are publicly readable but only writable by admins.
 * - Reviews are publicly readable, but only the review author can create/update/delete them.
 * - The rules do NOT validate the full data schema (data types, required fields) for rapid prototyping.
 *
 * Denormalization for Authorization:
 * - TripPlan documents include the userId to allow ownership checks without additional reads.
 * - Review documents include reviewerId and revieweeId for ownership and relation checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@masseurfriend.com';
    }

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // For update and delete, we must verify that the document exists.
      function isExistingOwner(userId) {
        return (isOwner(userId) && resource != null);
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Listing all users is permitted for admins.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if (isExistingOwner(userId) || isAdmin()) && request.resource.data.id == resource.data.id; //Enforce immutable userId
      allow delete: if isExistingOwner(userId) || isAdmin();

      /**
       * @description Enforces ownership and logic for user reviews.
       * @path /users/{userId}/reviews/{reviewId}
       */
      match /reviews/{reviewId} {
        function isReviewer() {
          return request.auth.uid == request.resource.data.reviewerId;
        }
        function isNotReviewingSelf(revieweeId) {
            return request.auth.uid != revieweeId;
        }

        allow get, list: if request.auth != null;
        // Ensure the createdAt field is a server timestamp on creation.
        allow create: if request.auth != null && isReviewer() && isNotReviewingSelf(userId) && request.resource.data.createdAt == request.time;
        allow update, delete: if request.auth != null && resource != null && request.auth.uid == resource.data.reviewerId;
      }
    }

    /**
     * @description Enforces user-ownership for trip plans.
     * @path /users/{userId}/trip_plans/{tripPlanId}
     */
    match /users/{userId}/trip_plans/{tripPlanId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // For update and delete, we must verify that the document exists.
      function isExistingOwner(userId) {
        return (isOwner(userId) && resource != null);
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if (isExistingOwner(userId) || isAdmin()) && request.resource.data.userId == resource.data.userId; // Enforce immutable userId.
      allow delete: if isExistingOwner(userId) || isAdmin();
    }
    
    /**
     * @description Allows public read access to service listings, but restricts writes to the provider.
     * @path /service_listings/{listingId}
     */
    match /service_listings/{listingId} {
       function isProvider() {
          return request.auth.uid == request.resource.data.providerId;
        }

      allow get, list: if request.auth != null;
      allow create: if request.auth != null && isProvider();
      allow update, delete: if request.auth != null && resource != null && request.auth.uid == resource.data.providerId;
    }

    /**
     * @description Allows admin-only access to invitations.
     * @path /invitations/{invitationId}
     */
    match /invitations/{invitationId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Allows public read access to city data, but restricts write access to admins.
     * @path /cities/{cityId}
     */
    match /cities/{cityId} {
      allow get, list: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows public read access to forecast data, but restricts write access to admins.
     * @path /cities/{cityId}/forecasts/{forecastId}
     */
    match /cities/{cityId}/forecasts/{forecastId} {
      allow get, list: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows public read access to competitor data, but restricts write access to admins.
     * @path /cities/{cityId}/competitor_data/{competitorDataId}
     */
    match /cities/{cityId}/competitor_data/{competitorDataId} {
      allow get, list: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Allows public read access to seasonal data, but restricts write access to admins.
     * @path /seasonal_data/{seasonalDataId}
     */
    match /seasonal_data/{seasonalDataId} {
      allow get, list: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }
  }
}
